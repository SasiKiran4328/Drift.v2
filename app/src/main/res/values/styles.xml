<resources>
    <style name="Theme.Drift" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>
    <style name="LargeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LargeSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="LargeText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources> 